[user]
	name = 
	email = 
[color]
	ui = true
[push]
	default = simple
[alias]
	lol = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all --color
	rollback = reset --soft HEAD^
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
[core]
	excludesfile = $HOME/.gitignore_global
	editor = "nvim"
[merge]
    tool = splice

[mergetool "splice"]
    cmd = "nvim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true
