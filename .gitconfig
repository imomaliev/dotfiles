# man git-config
[user]
	name = Sardorbek Imomaliev
	useConfigOnly = true
[color]
	ui = true
[pull]
	rebase = true
[push]
	# Defines the action git push should take if no refspec is explicitly given. 'simple': push if the upstream branch's name is same as the local one
	default = simple
[alias]
	rollback = reset --soft HEAD^
	graph = log --graph
	rpull = pull --no-rebase
	up = checkout
	st = status
	ci = commit -a
	di = diff -r HEAD
	ri = rebase -i
	sh = stash
	unsh = stash pop
	br = checkout -b
[core]
	excludesfile = ~/.gitignore_global
	editor = "nvim"
[merge]
	tool = vimdiff2
[mergetool "vimdiff2"]
	path = "nvim"
