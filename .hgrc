[ui]
username=
ssh=ssh -C
merge=vimdiff
ignore = ~/.hgignore_global
[extensions]
hgext.convert=
color=
hgext.mq=
shelve=
pager=
# prompt = ~/Development/Python/hg-prompt/prompt.py
[alias]
pull = pull -u
graph = log --graph --pager=yes
sh = shelve
br = branch
cl = up -C
[pager]
pager = less -FRX
[merge-tools]
vimdiff.executable = nvim
vimdiff.args = -d $base $local $output $other +close +close
