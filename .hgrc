# Mercurial configuration file
# See hgrc(5) for more information

# User Interface settings
[ui]
username=
ssh=ssh -C
merge=vimdiff
ignore = ~/.hgignore_global

# Enabled extensions
[extensions]
hgext.convert=
color=
hgext.mq=
shelve=
pager=

[alias]
pull = pull -u
graph = log --graph --pager=yes
df = diff --pager=yes

[pager]
pager = less -FRX

[merge-tools]
vimdiff.executable = nvim
vimdiff.args = -d $base $local $output $other +close +close
